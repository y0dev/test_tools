  "file_structure": {
    "boot_images": {
      "description": "Directory containing boot image components",
      "files": [
        "fsbl.elf",
        "pmufw.elf",
        "bl31.elf",
        "u-boot.elf",
        "application.elf"
      ]
    },
    "bitstreams": {
      "description": "Directory containing bitstream files",
      "files": [
        "zynq_design.bit",
        "zynqmp_design.bit",
        "artix_design.bit"
      ]
    },
    "projects": {
      "description": "Directory containing Vivado projects",
      "files": [
        "zynq_project.xpr",
        "zynqmp_project.xpr",
        "artix_project.xpr"
      ]
    },
    "output": {
      "description": "Directory for generated boot images",
      "files": [
        "zynq_fsbl_boot.bin",
        "zynqmp_complete_boot.bin",
        "zynqmp_minimal_boot.bin"
      ]
    }
  },
