{
  "test_templates": {
    "boot_data_test": {
      "description": "Verify correct boot data is printed",
      "uart_patterns": [
        {
          "regex": "Data:\\s*(0x[0-9A-Fa-f]+),\\s*(0x[0-9A-Fa-f]+),\\s*(0x[0-9A-Fa-f]+),\\s*(0x[0-9A-Fa-f]+),\\s*(0x[0-9A-Fa-f]+),\\s*(0x[0-9A-Fa-f]+)",
          "expected": [["0x12345678", "0xDEADBEEF","0x12345678", "0xDEADBEEF","0x23456789","0xABCDEF01"]]
        },
        {
          "regex": "Version:\\s*v(\\d\\.\\d)",
          "expected": ["v1.2"]
        }
      ],
      "output_format": "json"
    },
    "power_cycle_test": {
      "description": "Test multiple power cycles",
      "uart_patterns": [
        {
          "regex": "READY",
          "expected": ["READY"]
        }
      ],
      "output_format": "csv"
    },
    "comprehensive_test": {
      "description": "Full test with all patterns",
      "uart_patterns": [
        {
          "regex": "Boot:\\s*(\\w+)",
          "expected": ["success"]
        },
        {
          "regex": "Status:\\s*(\\w+)",
          "expected": ["OK"]
        }
      ],
      "output_format": "html"
    },
    "simple_ready_test": {
      "description": "Simple ready signal test",
      "uart_patterns": [
        {
          "regex": "READY",
          "expected": ["READY"]
        }
      ],
      "output_format": "text"
    },
    "version_check_test": {
      "description": "Check firmware version",
      "uart_patterns": [
        {
          "regex": "Version:\\s*v(\\d+\\.\\d+)",
          "expected": ["v1.0", "v1.1", "v1.2"]
        }
      ],
      "output_format": "json"
    },
    "stm32_numeric_output": {
      "description": "Capture numeric output from STM32 DEV_SAMPLE_FUNCTION",
      "uart_patterns": [
        {
          "regex": "^(\\d+)\\r\\n$",
          "expected": ["5"],
          "description": "Capture numeric output from DEV_SAMPLE_FUNCTION"
        }
      ],
      "output_format": "json"
    },
    "stm32_continuous_logging": {
      "description": "Continuous logging test to capture all STM32 output",
      "uart_patterns": [
        {
          "regex": ".*",
          "expected": [],
          "description": "Capture all output for analysis"
        }
      ],
      "output_format": "csv"
    },
    "stm32_power_cycle": {
      "description": "Test STM32 behavior during power cycles",
      "uart_patterns": [
        {
          "regex": "^(\\d+)\\r\\n$",
          "expected": ["5"],
          "description": "Verify numeric output after power cycle"
        }
      ],
      "output_format": "html"
    },
    "stm32_button_test": {
      "description": "Test STM32 button and LED interaction",
      "uart_patterns": [
        {
          "regex": "^(\\d+)\\r\\n$",
          "expected": ["5"],
          "description": "Verify numeric output during button presses"
        }
      ],
      "output_format": "json"
    },
    "stm32_error_detection": {
      "description": "Detect error conditions in STM32 output",
      "uart_patterns": [
        {
          "regex": "ERROR|Error|error",
          "expected": [],
          "description": "Detect any error messages"
        },
        {
          "regex": "^(\\d+)\\r\\n$",
          "expected": ["5"],
          "description": "Verify normal numeric output"
        }
      ],
      "output_format": "html"
    }
  },
  "defaults": {
    "cycles": 1,
    "on_time": 5,
    "off_time": 3,
    "output_format": "json"
  },
  "output": {
    "log_directory": "./output/logs",
    "report_directory": "./output/reports",
    "detailed_logs": true,
    "timestamp_format": "%Y-%m-%d_%H-%M-%S",
    "log_level": "INFO"
  }
}

